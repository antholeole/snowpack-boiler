{
    "include": [
        "src",
        "types",
        "test"
    ],
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "importsNotUsedAsValues": "error",
        "noEmit": false
    }
}